model Category {
  id               Int         @id @default(autoincrement())
  nameId           Int
  name             Translation @relation(fields: [nameId], references: [id], onDelete: Restrict)
  slug             String      @unique
  parentCategoryId Int?
  parentCategory   Category?   @relation("Children", fields: [parentCategoryId], references: [id], onDelete: Cascade)
  children         Category[]  @relation("Children")
  imageId          Int?
  image            Media?      @relation(fields: [imageId], references: [id], onDelete: SetNull)
  path             String      @default("")

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  deletedAt         DateTime?
  Product           Product[]
  CategoryAttribute CategoryAttribute[]

  @@index([path])
}
