model Attribute {
  id                     Int                     @id @default(autoincrement())
  slug                   String                   
  nameId                 Int
  name                   Translation             @relation("attributeNames", fields: [nameId], references: [id], onDelete: Restrict)
  order                  Int                     @default(0)
  unitId                 Int?
  unit                   Translation?            @relation("attributeUnits", fields: [unitId], references: [id], onDelete: SetNull)
  attributeGroupId       Int?
  attributeGroup         AttributeGroup?         @relation(fields: [attributeGroupId], references: [id], onDelete: SetNull)
  createdAt              DateTime                @default(now())
  updatedAt              DateTime                @updatedAt
  deletedAt              DateTime?
  categoryAttributes     CategoryAttribute[]
  productAttributeValues ProductAttributeValue[]
}
